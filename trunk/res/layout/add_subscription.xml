<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >


    <EditText
        android:id="@+id/carer_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "10dp"        
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/carer_mail" />

    <CheckBox
        android:id="@+id/check_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carer_mail"
        android:layout_below="@+id/carer_mail"
        android:paddingLeft= "30dp"        
        android:layout_marginTop="10dp"
        android:text="@string/location" />
    
    
    <TextView
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_loc"
        android:layout_below="@+id/check_loc"
        android:text="@string/pb" />"
   
    <Button
        android:id="@+id/send_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb"
        android:layout_centerHorizontal="true"
        android:text="@string/send_req"
        android:background="@color/univ"
        android:textColor="@color/head"
        android:layout_marginTop="20dp" />

    
</RelativeLayout>